{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Modifier l'article</h1>
        <form method="post" action="">
            {{ form_errors(form) }}

            <div class="row editor_custom_form_group">
                <div class="col-md-2">
                    {{ form_label(form.titre) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.titre) }}
                </div>
                {{ form_errors(form.titre) }}
            </div>
            <br/>
            <div class="row editor_custom_form_group">
                <div class="col-md-2">
                    {{ form_label(form.contenu) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.contenu) }}
                </div>
                {{ form_errors(form.contenu) }}
            </div>
            <br/>
            <div class="row editor_custom_form_group">
                <div class="col-md-2">
                    {{ form_label(form.service) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.service) }}
                </div>
                {{ form_errors(form.service) }}
            </div>
            <br/>
            <div class="row editor_custom_form_group">
                <div class="col-md-2">
                    {{ form_label(form.datePublication) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.datePublication) }}
                </div>
                {{ form_errors(form.datePublication) }}
            </div>
            <br/>
            <div class="row editor_custom_form_group">
                <div class="col-md-2">
                    {{ form_label(form.lang) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.lang) }}
                </div>
                {{ form_errors(form.lang) }}
            </div>
            <br/>
            <div class="row editor_custom_form_group">
                <div class="col-md-2">
                    {{ form_label(form.publicated) }}
                </div>
                <div class="col-md-9">
                    {{ form_widget(form.publicated) }}
                </div>
                {{ form_errors(form.publicated) }}
            </div>
            {{ form_rest(form) }}
            <br/>
            <div class="row editor_custom_form_group">
                <div class="col-md-12">
                    {{ form_widget(form.submit) }}
                </div>
            </div>

        </form>
    </div>
{% endblock %}